<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>
            {% block title %}
                Welcome!
            {% endblock %}
        </title>
        <link rel="icon"
            href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>" />
        <link rel="icon" href="{{ asset('img/favicon.png') }}" />

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('proj') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('proj') }}
        {% endblock %}
    </head>
    <body>
        <header class="shadowed">
            <div class="site-header"
                style="background-image: url({{
                asset(
                    'img/background.jpg'
                )
                }})">
                <span class="site-title">proj mvc</span>
            </div>
            <nav>
                <ul>
                    <li><a href="{{ path('proj') }}">Start</a></li>
                    <li><a href="{{ path('proj_about') }}">About</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <section id="content">
                {% block content %}

                {% endblock %}
            </section>
            {% block sidebar %}

            {% endblock %}
        </main>

        <footer>
            <hr />
            <div class="footer-left">
                &copy; 2023 by <a href="https://arweb.dev">ARWeb</a>
            </div>
            <div class="footer-right">
                <a href="mailto:contact@arweb.dev">Contact</a>
            </div>
        </footer>
    </body>
</html>
