{% extends 'base.html.twig' %}

{% block title %}
    Game 21 - Play
{% endblock %}

{% block content %}
    <h1>
        Game 21 - Play
    </h1>

    {{ include('flash.html.twig') }}

    <h4 class="results"></h4>

    <div class="container">
        <div class="frame">
            <div class="table">
                <div class="logo">
                    JackDashâ„¢
                </div>

                <div class="player">
                    <p>
                        Dealer
                    </p>

                    {% if
                        dealerHand[0] is defined
                            and dealerHand[0] is not empty %}
                        <div class="card {{
                            dealerHand[0].getSuit() == 'H'
                                or dealerHand[0].getSuit() == 'D'
                                ? 'red'
                                : 'black'
                            }}">
                            <span class="rank">
                                {{ attribute(dealerHand[0], 'getRank') }}
                            </span>
                            <span class="suit top">
                                {{ attribute(dealerHand[0], 'getSuitSymbol') }}
                            </span>
                            <span class="suit bottom">
                                {{ attribute(dealerHand[0], 'getSuitSymbol') }}
                            </span>
                        </div>
                    {% else %}
                        {# Handle the case when dealerHand[0] is not an object (e.g., it's a string or null) #}
                        <div class="card error">
                            <span class="bg">
                                <span class="rank">Err</span>
                            </span>
                        </div>
                    {% endif %}
                    <div class="card unknown">
                        <span class="bg">
                            <img src="{{ asset('img/cardback.svg') }}" />
                        </span>
                    </div>
                </div>

                {% if hasSplit %}
                    <script>
                        console.log("has split", {{ hasSplit }});
                    </script>
                    {# First Split Hand #}
                    <div class="player">
                        {% for card in playerHand1 %}
                            {% if card is defined and card is not empty %}
                                <div class="card {{
                                    card.getSuit() == 'H'
                                        or card.getSuit() == 'D'
                                        ? 'red'
                                        : 'black'
                                    }}">
                                    <span class="rank">
                                        {{ card.getRank() }}
                                    </span>
                                    <span class="suit top">
                                        {{ card.getSuitSymbol() }}
                                    </span>
                                    <span class="suit bottom">
                                        {{ card.getSuitSymbol() }}
                                    </span>
                                </div>
                            {% else %}
                                {# Handle the case when card is not an object (e.g., it's a string or null) #}
                                <div class="card error">
                                    <span class="bg">
                                        <span class="rank">Err</span>
                                    </span>
                                </div>
                            {% endif %}
                        {% endfor %}
                        <div class="data-row">
                            <p>
                                You (Hand 1)
                            </p>
                            <p class="right">
                                {{ handValue1 }}
                            </p>
                        </div>
                    </div>

                    {# Second Split Hand #}
                    <div class="player">
                        {% for card in playerHand2 %}
                            {% if card is defined and card is not empty %}
                                <div class="card {{
                                    card.getSuit() == 'H'
                                        or card.getSuit() == 'D'
                                        ? 'red'
                                        : 'black'
                                    }}">
                                    <span class="rank">
                                        {{ card.getRank() }}
                                    </span>
                                    <span class="suit top">
                                        {{ card.getSuitSymbol() }}
                                    </span>
                                    <span class="suit bottom">
                                        {{ card.getSuitSymbol() }}
                                    </span>
                                </div>
                            {% else %}
                                {# Handle the case when card is not an object (e.g., it's a string or null) #}
                                <div class="card error">
                                    <span class="bg">
                                        <span class="rank">Err</span>
                                    </span>
                                </div>
                            {% endif %}
                        {% endfor %}
                        <div class="data-row">
                            <p>
                                You (Hand 2)
                            </p>
                            <p class="right">
                                {{ handValue2 }}
                            </p>
                        </div>
                    </div>
                {% else %}
                    <script>
                        console.log("No split");
                    </script>
                    {# Original Single Hand Visualization #}
                    <div class="player">
                        {% for card in playerHand %}
                            {% if card is defined and card is not empty %}
                                <div class="card {{
                                    card.getSuit() == 'H'
                                        or card.getSuit() == 'D'
                                        ? 'red'
                                        : 'black'
                                    }}">
                                    <span class="rank">
                                        {{ card.getRank() }}
                                    </span>
                                    <span class="suit top">
                                        {{ card.getSuitSymbol() }}
                                    </span>
                                    <span class="suit bottom">
                                        {{ card.getSuitSymbol() }}
                                    </span>
                                </div>
                            {% else %}
                                {# Handle the case when card is not an object (e.g., it's a string or null) #}
                                <div class="card error">
                                    <span class="bg">
                                        <span class="rank">Err</span>
                                    </span>
                                </div>
                            {% endif %}
                        {% endfor %}
                        <div class="data-row">
                            <p>
                                You
                            </p>
                            <p class="right">
                                {{ handValue }}
                            </p>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="row mt">
            {% if handValue == 21 %}
                <form action="{{ path('game21_stand') }}" method="post">
                    <button class="button success" type="submit">Stand</button>
                </form>
            {% else %}
                <form action="{{ path('game21_hit') }}" method="post">
                    <button class="button primary" type="submit">Hit</button>
                </form>
                <form action="{{ path('game21_stand') }}" method="post">
                    <button class="button success" type="submit">Stand</button>
                </form>
            {% endif %}

            {% if canSplit %}
                <form action="{{ path('game21_split') }}" method="post">
                    <button class="button warning" type="submit">Split</button>
                </form>
            {% endif %}

            <a class="button danger" href="{{ path('game21_init') }}">
                Start Over
            </a>
        </div>

        <div class="bet-container mt">
            <h5>
                Current Bet: $<span id="displayedBet">{{ app.session.get(
                        'game21_bet'
                    )
                        ?? 10 }}</span>
            </h5>
            <p>
                Your Balance: ${{ playerMoney }}
            </p>
        </div>
    </div>
{% endblock %}
