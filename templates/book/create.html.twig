{% extends 'base.html.twig' %}

{% block title %}
    Create Book
{% endblock %}

{% block content %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font:
        18px/1.5 sans-serif; } .example-wrapper code { background: #F5F5F5;
        padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>
            Create New Book
        </h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Save Book</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block sidebar %}
    <aside id="sidebar">
        <h1>
            Links
        </h1>
        <a href="{{ path('library_show') }}">Go back to Library</a>
    </aside>
{% endblock %}
