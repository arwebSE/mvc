<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>
            {% block title %}
                Welcome!
            {% endblock %}
        </title>
        <link rel="icon"
            href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>" />
        <link rel="icon" href="{{ asset('img/favicon.png') }}" />

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="shadowed">
            <div class="site-header"
                style="background-image: url({{
                asset(
                    'img/background.jpg'
                )
                }})">
                <span class="site-title">mvc auro17</span>
            </div>
            <nav>
                <ul>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li><a href="{{ path('about') }}">About</a></li>
                    <li><a href="{{ path('report') }}">Report</a></li>
                    <li><a href="{{ path('lucky') }}">Lucky</a></li>
                    <li><a href="{{ path('library_show') }}">Library</a></li>
                    <li>
                        <div class="dropdown">
                            <a href="{{ path('games') }}">Games</a>
                            <div class="dropdown-content">
                                <a href="{{ path('pig_start') }}">Pig</a>
                                <a href="{{ path('card_start') }}">Card Game</a>
                                <a href="{{ path('game21_home') }}">21 Game</a>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="dropdown">
                            <a href="{{ path('api') }}">API</a>
                            <div class="dropdown-content">
                                <a href="{{ path('api_quote') }}">Quotes</a>
                                <a href="{{ path('api_deck') }}">Deck</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </nav>
        </header>

        <main>
            <section id="content">
                {% block content %}

                {% endblock %}
            </section>
            {% block sidebar %}

            {% endblock %}
        </main>

        <footer>
            <hr />
            <div class="footer-left">
                &copy; 2023 by <a href="https://arweb.dev">ARWeb</a>
            </div>
            <div class="footer-right">
                <a href="mailto:contact@arweb.dev">Contact</a>
            </div>
        </footer>
    </body>
</html>
