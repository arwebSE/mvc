{% extends 'base.html.twig' %}

{% block title %}
    Card Game
{% endblock %}

{% block content %}
    <h1>
        Card Game
    </h1>
    <p>
        Enter the number of cards you want in your hand to start the game:
    </p>

    <form method="post" action="{{ path('card_init_post') }}">
        <div>
            <label for="num_cards">Number of cards:</label>
            <input type="number"
                id="num_cards"
                name="num_cards"
                min="1"
                max="52"
                required />
            <button class="button primary" type="submit">Start Game</button>
        </div>
    </form>
{% endblock %}
