{% extends 'base.html.twig' %}

{% block title %}
    Card Game
{% endblock %}

{% block content %}
    <h1>
        Card Game
    </h1>

    <p>
        This is a classical card game.
    </p>

    <p>
        Start the Game: <a href="{{ path('card_init_get') }}" class="button primary">Play
            Game</a>
    </p>

    <p>
        Test the deck:
        <a href="{{ path('card_deck') }}" class="button">Test Deck</a>
    </p>

    <style>
        h1 { border-bottom: 4px double green; }
    </style>
{% endblock %}
